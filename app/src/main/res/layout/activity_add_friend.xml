<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.helper.send.chat.AddFriendActivity">
    <LinearLayout android:background="#02bb9d"
        android:id="@+id/rl_add_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="52.0dip">
        <ImageView android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <TextView android:textSize="20.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="搜索好友"
            android:gravity="center"
            android:layout_gravity="center"/>
        <View
            android:id="@+id/tv_add_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_marginRight="15.0dip"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_add_toolbar"
        android:layout_marginTop="6dp">
        <EditText
            android:id="@+id/et_who"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="4"
            android:background="@drawable/shape_editext"
            android:hint="请输入对方的手机号或昵称"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/but_sousuo"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="搜索"
            android:textColor="#fff"
            android:background="@drawable/shape_sousuo"/>
    </LinearLayout>
    <ListView
        android:id="@+id/list_jieguo"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll111"/>
</RelativeLayout>
