<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    <LinearLayout
        android:id="@+id/llhaoyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true">
        <com.example.administrator.helper.View.CircularImageView
            android:id="@+id/iv_item_user_head"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/my_backgroudd"/>
        <RelativeLayout
            android:id="@+id/rl_item_friend"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zhangsan"
                android:textColor="@color/black"
                android:textSize="22dp"
                />
            <TextView
                android:id="@+id/item_last_talk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/text_clo"
                android:ellipsize="end"
                android:lines="1"
                android:text="jahsdkfbsdasfdbd"
                android:layout_below="@+id/item_user_name"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
</LinearLayout>