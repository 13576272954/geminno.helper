<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.administrator.helper.View.CircularImageView
        android:id="@+id/iv_item_user_head"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/b2"/>
    <RelativeLayout
        android:id="@+id/rl_item_friend"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zhangsan"
            android:textColor="@color/black"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/item_last_talk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="20dp"
            android:textColor="@color/text_clo"
            android:gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:text="jahsdkfblkdafsgblkjdfbgkjhabd"
            android:layout_below="@+id/item_user_name"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:textColor="@color/text_clo"
        android:textSize="20dp"
        android:text="11:11"
        android:layout_gravity="center_vertical"/>
</LinearLayout>