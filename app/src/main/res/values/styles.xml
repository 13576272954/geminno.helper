<resources>

    

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="mystyle" parent="AppTheme">
        <item name="android:textColor">#FF7E00</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="myApplication" parent="AppTheme">
        <item name="android:textColor">#00ff00</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="myActicity" parent="AppTheme">
        <item name="android:textColor">#0000ff</item>
        <item name="android:textSize">40dp</item>
    </style>

    <!-- view分割线样式 -->
    <style name="bg_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/border_clo</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>


    - <style name="md_line">
    <item name="android:layout_width">1px</item>
    <item name="android:layout_height">12dp</item>
    <item name="android:background">@color/border_clo</item>
</style>
    <style name="MySettingText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">6</item>
    </style>
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/pop_push_up_in</item>
        <item name="android:windowExitAnimation">@anim/pop_push_down_out</item>
    </style>
</resources>
